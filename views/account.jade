doctype html

//- This template shows the sign up button or the logout button depending on whether
//- a user is logged in.

html
    body
        if (typeof(user) === 'undefined')
            form(action="user", method="post", id="signup")
                input(type="hidden", name="resume", value="blank")
                input(type="submit" style="position: absolute; right: 15%; top: 10px;" value="Sign Up or Log In to Save")
        else
            a(href="user/logout", style="position: absolute; right: 15%;") Logout #{user}